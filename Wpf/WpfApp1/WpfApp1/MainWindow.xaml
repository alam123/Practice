<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.Resources>
            <SolidColorBrush x:Key="RedBrush" Color="Red"></SolidColorBrush>
            <SolidColorBrush x:Key="BlueBrush" Color="Blue"></SolidColorBrush>
        </Grid.Resources>
        <Grid Height="100" Width="200">
            <Button x:Name="button" Content="Button" BorderBrush="{StaticResource RedBrush}" Background="{DynamicResource DynamicColor}"/>
        </Grid>
        <Button x:Name="button1" Content="Change to Red" HorizontalAlignment="Left" Margin="590,160,0,0" VerticalAlignment="Top" Width="131" Click="Button1_Click"/>
        <Button x:Name="button2" Content="Change to Blue" HorizontalAlignment="Left" Margin="590,240,0,0" VerticalAlignment="Top" Width="131" Click="Button2_Click"/>

    </Grid>
</Window>
